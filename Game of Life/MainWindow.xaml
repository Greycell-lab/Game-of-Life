<Window x:Class="Game_of_Life.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_of_Life"
        mc:Ignorable="d"
        Title="Game of Life" Height="1080" Width="1920">
    <Grid>
        <Canvas x:Name="myCanvas" HorizontalAlignment="Left" Height="900" Margin="130,39,0,0" VerticalAlignment="Top" Width="900"/>
        <Button x:Name="starte" Content="Starte Animation" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" Click="ButtonTimer"/>
        <Button x:Name="random" Content="Random" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Click="ButtonTimer"/>
        <Button x:Name="reset" Content="Reset" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Click="ButtonTimer"/>
        <Label x:Name="cyan" Content="" HorizontalAlignment="Left" Margin="1421,180,0,0" VerticalAlignment="Top" FontSize="40"/>
        <Label x:Name="red" Content="" HorizontalAlignment="Left" Margin="1421,248,0,0" VerticalAlignment="Top" FontSize="40"/>

    </Grid>
</Window>
